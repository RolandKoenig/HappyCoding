<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ext="https://github.com/RolandK.AvaloniaExtensions"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="HappyCoding.AvaloniaCustomResponsiveControls.SampleLayouts.TwoColumnsSample">
    <UserControl.Styles>
        <Style Selector="Border.FakeContent">
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="15" />
            <Setter Property="TextBlock.Foreground" Value="Black" />
            <Setter Property="Background" Value="LightGray" />
            <Setter Property="BorderBrush" Value="SlateGray" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
    </UserControl.Styles>
    
    <ScrollViewer VerticalScrollBarVisibility="Visible"
                  HorizontalScrollBarVisibility="Disabled"
                  Background="#333333">
        <Border Padding="12">
            <ext:ResponsiveGrid VerticalAlignment="Top" 
                                ColumnSpacing="12"
                                RowSpacing="12">
                <Border ext:ResponsiveGrid.Columns="12"  
                        Classes="FakeContent" Height="100">
                    <TextBlock Text="Full width content panel #1" />
                </Border>
                <Border ext:ResponsiveGrid.Columns="12"  
                        Classes="FakeContent" Height="100">
                    <TextBlock Text="Full width content panel #2" />
                </Border>
                
                <StackPanel ext:ResponsiveGrid.Columns="12" 
                            ext:ResponsiveGrid.ColumnsLg="6" 
                            Orientation="Vertical"
                            HorizontalAlignment="Stretch"
                            Spacing="12">
                    <Border Classes="FakeContent" Height="300">
                        <TextBlock Text="Half content panel left #1" />
                    </Border>
                    <Border Classes="FakeContent" Height="500">
                        <TextBlock Text="Half content panel left #2" />
                    </Border>
                </StackPanel>
                <StackPanel ext:ResponsiveGrid.Columns="12" 
                            ext:ResponsiveGrid.ColumnsLg="6" 
                            Orientation="Vertical"
                            HorizontalAlignment="Stretch"
                            Spacing="12">
                    <Border Classes="FakeContent" Height="400">
                        <TextBlock Text="Half content panel right #1" />
                    </Border>
                    <Border Classes="FakeContent" Height="400">
                        <TextBlock Text="Half content panel right #2" />
                    </Border>
                </StackPanel>
            </ext:ResponsiveGrid>
        </Border>
    </ScrollViewer>
</UserControl>
