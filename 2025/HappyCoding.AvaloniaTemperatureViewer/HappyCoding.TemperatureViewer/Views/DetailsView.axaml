<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:HappyCoding.TemperatureViewer"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="HappyCoding.TemperatureViewer.Views.DetailsView"
             x:DataType="local:TemperatureViewerViewModel">
    <Border Classes="GridBorder">
        <DataGrid ItemsSource="{Binding Measurements}"
                  CanUserResizeColumns="True"
                  CanUserSortColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Timestamp"
                                    Binding="{Binding TimeStamp}"
                                    Width="225"/>
                <DataGridTextColumn Header="Temperature" 
                                    Binding="{Binding TemperatureInDegrees, StringFormat='{}{0:F2}Â°'}"
                                    Width="125"/>
            </DataGrid.Columns>
        </DataGrid>
    </Border>
</UserControl>
