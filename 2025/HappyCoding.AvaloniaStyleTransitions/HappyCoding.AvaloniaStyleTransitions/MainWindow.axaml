<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HappyCoding.AvaloniaStyleTransitions"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="HappyCoding.AvaloniaStyleTransitions.MainWindow"
        x:DataType="local:MainWindowViewModel"
        Title="HappyCoding.AvaloniaStyleTransitions">
    <Window.Styles>
        <StyleInclude Source="MainWindowStyles.axaml"></StyleInclude>
    </Window.Styles>
    
    <Border VerticalAlignment="Center" HorizontalAlignment="Center"
            Classes="InputArea">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock Classes="Label" 
                           Text="Name: " />
                <TextBox Text="{Binding Name}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Classes="Label" 
                           Text="Greeting: " />
                <TextBox Text="{Binding Greeting}"
                         IsReadOnly="True" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
